<div class="container">

  <h1>IdeaBox</h1>
  <h3>Because your ideas need a box</h3>


  <table class="table ideas">
    <thead>
      <tr>
        <td>Title</td>
        <td>Body</td>
        <td>Quality</td>
        <td>Date Created</td>
        <td>Last Updated</td>
      </tr>
    </thead>
    <tbody>
      <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.title %></td>
        <td><%= idea.body %></td>
        <td><%= idea.quality %></td>
        <td><%= idea.formatted_created_at %></td>
        <td><%= idea.formatted_updated_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
